<%= form_for(@task) do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :details %>
    <%= f.text_field :details %>
  </div>

  <div>
    <%= f.label :completed unless @task.new_record? %>
    <%= f.text_field :completed unless @task.new_record? %>
  </div>

<%= f.submit %>
<% end %>
